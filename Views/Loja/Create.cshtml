@model CNPJMVC.Models.Loja

@{
    ViewData["Title"] = "Novo Cadastro";
}

<h2>Cadastro de Loja</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome_Completo" class="control-label"></label>
                <input asp-for="Nome_Completo" class="form-control" />
                <span asp-validation-for="Nome_Completo" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>
<divclass="form-group">
    <a asp-action="Index">Voltar à lista</a>
</div>

<divclass="form-group">
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
</div>
}
